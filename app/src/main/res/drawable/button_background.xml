<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
      android:shape="rectangle">
      <solid android:color="@color/background_hollow_button_pressed"/>
      <corners android:radius="72dp"/>
      <stroke android:color="@color/background_hollow_button_pressed" android:width="1dp"/>
    </shape>
  </item>
  <item android:state_enabled="false">
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
      android:shape="rectangle">
      <solid android:color="@color/background_hollow_button"/>
      <corners android:radius="72dp"/>
      <stroke android:color="@color/border_hollow_button_inactive" android:width="1dp"/>
    </shape>
  </item>
  <item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
      android:shape="rectangle">
      <solid android:color="@color/background_hollow_button"/>
      <corners android:radius="72dp"/>
      <stroke android:color="@color/border_hollow_button" android:width="2dp"/>
    </shape>
  </item>
</selector>